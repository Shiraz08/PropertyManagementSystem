@model IEnumerable<Property_Management_Sys.Models.Tbl_Property_Detail>
@{
    ViewBag.Title = "Details";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <!-- Basic table card start -->
                    <div class="card">
                        <div class="card-header">
                            <h5>Property Detail List</h5>
                            <div class="card-header-right">
                                <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search Property Details.." class="form-control">
                            </div>
                        </div>
                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table class="table" id="myTable">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center!important">
                                                @Html.DisplayNameFor(model => model.Building_No)
                                            </th>
                                            <th style="text-align:center!important">
                                                @Html.DisplayNameFor(model => model.Builiding_Name)
                                            </th>
                                            <th style="text-align:center!important">
                                                @Html.DisplayNameFor(model => model.LanLoadrd_Name)
                                            </th>
                                            <th style="text-align:center!important">
                                                <span>Unit No</span>
                                            </th>
                                            <th style="text-align:center!important">
                                                @Html.DisplayNameFor(model => model.Elec_Water_Acc_No)
                                            </th>
                                            <th style="text-align:center!important">
                                                @Html.DisplayNameFor(model => model.Water_Acc_NO)
                                            </th>
                                            @*<th style="text-align:center!important">
                                                    @Html.DisplayNameFor(model => model.Pro_Detail_Datetime)
                                                </th>*@
                                            <th style="text-align:center!important">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr style="text-align:center!important">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Building_No)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Builiding_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.LanLoadrd_Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Apt_Villa_No)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Elec_Water_Acc_No)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Water_Acc_NO)
                                                </td>
                                                @*<td>
                                                        @Html.DisplayFor(modelItem => item.Pro_Detail_Datetime)
                                                    </td>*@
                                                <td>
                                                    @*@{ var typeval = Session["UserType"].ToString();
                                                        if (typeval == "1")
                                                        {
                                                            @Html.ActionLink("Edit", "Edit", new { id = item.Pro_Detail_Id })

                                                        }
                                                    } |*@
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.Pro_Detail_Id })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
